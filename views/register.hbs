<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css"
    />
    <link rel="stylesheet" href="styles.css" />
    <script src="register.js"></script>

  </head>
  <body>
    <div class="container">
      <nav>
        <div class="logo">
          <a href="/">
            <img src="/logo.png" alt="website logo" />
          </a>
        </div>
        <ul>
          <li>
            <a href="/#about">Home</a>
          </li>
          <li>
            <a href="/#services">Services</a>
          </li>
          <li>
            <a href="/#opportunities">Opportunities</a>
          </li>
          <li>
            <a href="/#contact-us">Contact Us</a>
          </li>
          <li>
            <a href="login">Login</a>
          </li>
        </ul>
      </nav>
      <form action="/auth/register" method="POST" class="register">
        <h1>Create Account</h1>
        <label for="usename">
          <input type="text" id="username" name="name" required />
          <span>Full name</span>
        </label>
        <span class="gender-span">Gender :</span>
        <div class="gender">
          <input type="radio" class="button-radio" id="male" name="gender" value="male">
          <label for="male" class="label-male">male</label>
          <input type="radio" id="female" name="gender" value="female">
          <label for="female">female</label>
        </div>
        <label for="email">
          <input type="email" id="email" name="email" required />
          <span>Email</span>
        </label>
        <label for="country">
          <input type="text" id="username" name="country" required />
          <span>Country</span>
        </label>
        <label for="City">
          <input type="text" id="username" name="city" required />
          <span>City</span>
        </label>
        <label for="phone">
          <input type="tel" id="username" name="phone" required />
          <span>Phone Number</span>
        </label>

        <label for="password">
          <input type="password" id="password" name="password" required />
          <span>Password</span>
        </label>
        <label for="confirm-password">
          <input
            type="password"
            id="confirm-password"
            name="passwordConfirm"
            required
          />
          <span>Confirm Password</span>
        </label>
        <p id="message"></p>
        <button type="submit" onclick="checkpassword()">Create Account</button>
        <p>You already have an account. <a href="/login.html">Log In</a></p>
      </form>
      {{#if message}}
        <h4 class="alert alert-danger mt-4">{{message}}</h4>

      {{/if}}
    </div>
  </body>
</html>

